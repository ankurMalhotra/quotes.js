{
  "src_folders" : ["tests"],
  "live_output": false,
  "selenium" : {
    "start_process" : false,
    "server_path" : "./tests/server/selenium.jar",
    "host" : "127.0.0.1",
    "port" : 4444
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : false
      },
      "desiredCapabilities" : {
        "browserName" : "phantomjs",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true,
        "phantomjs.binary.path" : "./tests/server/phantomjs"
      }
    }
  }
}
